<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <RootNamespace>Toolbelt.Mono.Globalization</RootNamespace>
  </PropertyGroup>

  <PropertyGroup>
    <DocumentationFile>bin\$(Configuration)\$(TargetFramework)\$(MSBuildProjectName).xml</DocumentationFile>
    <NoWarn>$(NoWarn);1591</NoWarn>
    <GeneratePackageOnBuild Condition=" '$(Configuration)' == 'Release' ">true</GeneratePackageOnBuild>
    <Authors>J.Sakamoto</Authors>
    <Copyright>Copyright © 2019 J.Sakamoto, Mozilla Public License 2.0</Copyright>
    <PackageLicenseExpression>MPL-2.0</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/jsakamoto/Toolbelt.Mono.JapaneseEra.Reiwa.MonkeyPatch</PackageProjectUrl>
    <Description>Client-side Blazor などの Mono ランタイムにおいて、System.Globalization.JapaneseCalendar 実装を書き換え、和暦年号 "令和" を有効にするライブラリです。</Description>
    <PackageTags>blazor,mono,japanesecalendar,reiwa</PackageTags>
    <PackageReleaseNotes>v.1.0.0
- 初回リリース</PackageReleaseNotes>
  </PropertyGroup>

</Project>
